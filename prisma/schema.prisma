generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String  @id @default(uuid())
  name       String
  email      String
  program    String?
  university String?
}

enum limited_rating {
  ZERO
  ONE
  TWO
  THREE
  FOUR
  FIVE
}

model Review {
  id        Int        @id @default(autoincrement()) // Primary key, auto-increments
  rating    Int // Rating field (integer, e.g., 1 to 5)
  text      String // Review content (text)
  reviewer  String // Name of the reviewer
  createdAt DateTime   @default(now()) // Timestamp when review is created
  companyId String? // Foreign key to the Companies model
  company   Companies? @relation(fields: [companyId], references: [id])
}

model Salaries {
  id         String    @id @default(uuid())
  companyId  String
  company    Companies @relation(fields: [companyId], references: [id])
  wtNumber   Int
  salaryInfo String
}

model Companies {
  id              String     @id @default(uuid())
  name            String
  description     String
  culture         String?
  benefits        String?
  location        String
  primaryIndustry String
  companySize     String
  founded         Int
  recruiterEmails String[]
  image           String?
  banner          String?
  linkedin        String
  careerPages     String
  salaryInfo      String
  reviews         Review[]
  salaries        Salaries[]
}
