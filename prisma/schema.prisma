generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String  @id @default(uuid())
  name       String
  email      String
  program    String?
  institution String?
  location   String?
  profilePhoto File?

}

model Recruiter {
  id    String  @id @default(uuid())
  name  String
  email String
  company Companies      @relation(fields: [companyId], references: [id])
  location String?
}

model Jobs {
  id        String  @id @default(uuid())
  company   Companies      @relation(fields: [companyId], references: [id])
  recruiter  Recruiter      @relation(fields:  [recruiterId], references: [id])
}

enum limited_rating {
  ZERO
  ONE
  TWO
  THREE
  FOUR
  FIVE
}

model Reviews {
  id         String         @id @default(uuid())
  reviewerId String
  companyId  String
  company    Companies      @relation(fields: [companyId], references: [id])
  review     String
  rating     limited_rating
}

model Salaries {
  id         String    @id @default(uuid())
  companyId  String
  company    Companies @relation(fields: [companyId], references: [id])
  wtNumber   Int
  salaryInfo String
}

model Companies {
  id               String     @id @default(uuid())
  name             String
  description      String
  culture          String?
  benefits         String?
  location         String
  primaryIndustry  String
  companySize      String
  founded          Int
  recruiterEmails  String[]
  image            String?
  banner           String?
  linkedin         String
  careerPages      String
  salaryInfo       String
  reviews          Reviews[]
  salaries         Salaries[]
}

